{
  "name": "lit-dev-tests",
  "private": true,
  "version": "0.0.0",
  "description": "Tests for lit.dev",
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "start": "wireit",
    "test:integration": "wireit",
    "test:integration:update-golden-screenshots": "wireit",
    "test:links:redirects": "wireit",
    "test:links:internal": "run-p --race start test:links:internal:cmd",
    "test:links:internal:cmd": "wait-on tcp:6415 && broken-link-checker http://localhost:6415 --recursive --exclude-external --ordered",
    "test:links:external": "run-p --race start test:links:external:cmd",
    "test:links:external:cmd": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "../lit-dev-server:build"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "../../tsconfig.base.json"
      ],
      "output": [
        "lib"
      ],
      "command": "../../node_modules/.bin/tsc --build --pretty",
      "clean": "if-file-deleted"
    },
    "start": {
      "dependencies": [
        "../..:start"
      ]
    },
    "test:integration": {
      "dependencies": [
        "build"
      ],
      "files": [
        "src/**/*.png"
      ],
      "command": "playwright install && playwright test --config=lib/playwright.config.js"
    },
    "test:integration:update-golden-screenshots": {
      "dependencies": [
        "build"
      ],
      "files": [],
      "command": "playwright install && playwright test --config=lib/playwright.config.js --update-snapshots"
    },
    "test:links:redirects": {
      "dependencies": [
        "build",
        "../lit-dev-content:build"
      ],
      "command": "node lib/check-redirects.js"
    },
    "test:links:external:cmd": {
      "dependencies": [
        "build"
      ],
      "command": "wait-on tcp:6415 && node lib/check-broken-links.js"
    }
  },
  "dependencies": {
    "@playwright/test": "^1.19.1",
    "@types/ansi-escape-sequences": "^4.0.0",
    "@types/node": "^16.0.0",
    "ansi-escape-sequences": "^6.2.1",
    "broken-link-checker": "^0.7.8",
    "lit-dev-server": "^0.0.0",
    "node-fetch": "^3.2.0",
    "wait-on": "^6.0.1"
  },
  "devDependencies": {
    "@types/broken-link-checker": "^0.7.1"
  }
}
