{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [],
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules/**/*",
    // TODO(kschaaf): Remove once lit released with these directives
    "examples/directive-async-append/**/*",
    "examples/directive-async-replace/**/*",
  ]
}
