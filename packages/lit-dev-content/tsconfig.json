{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./lib/tsconfig.tsbuildinfo",
    "target": "es2020",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "composite": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}
