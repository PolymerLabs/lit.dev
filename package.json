{
  "name": "lit.dev",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "bootstrap": "lerna bootstrap --ci",
    "build": "lerna run build --stream",
    "start": "cd packages/lit-dev-server && npm start",
    "dev": "cd packages/lit-dev-content && (npm run build:ts:watch -- --preserveWatchOutput & npm run dev:build:site:watch & npm run dev:serve)",
    "format": "prettier \"**/*.{ts,js,json,html,css,md}\" --write",
    "nuke": "rm -rf node_modules && npm ci && lerna exec 'rm -rf node_modules' && lerna bootstrap --ci",
    "upgrade": "rm -rf node_modules package-lock.json && npm install && lerna exec 'rm -rf node_modules package-lock.json' && lerna bootstrap",
    "test": "npm run test:integration && npm run test:links",
    "test:links": "npm run test:links:redirects && npm run test:links:internal && npm run test:links:external",
    "test:links:redirects": "node packages/lit-dev-tools-esm/lib/check-redirects.js",
    "test:links:internal": "run-p -r start check-links:internal",
    "test:links:external": "run-p -r start check-links:external",
    "check-links:internal": "wait-on tcp:6415 && blc http://localhost:6415 --recursive --exclude-external --ordered",
    "check-links:external": "wait-on tcp:6415 && blc http://localhost:6415 --exclude 'http://localhost:8000/dev/' --exclude 'https://www.npmjs.com/*' --get --recursive --host-requests 1",
    "test:integration": "run-p -r start test:integration:run",
    "test:update-golden-screenshots": "run-p -r start test:integration:update-golden-screenshots",
    "test:integration:install-deps": "npx playwright install-deps chromium",
    "test:integration:run": "npx playwright test",
    "test:integration:update-golden-screenshots": "npx playwright test --update-snapshots"
  },
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@playwright/test": "^1.14.1",
    "broken-link-checker": "^0.7.8",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "typescript": "^4.4.3",
    "wait-on": "^6.0.0"
  }
}
